apiVersion: v1
kind: Secret
metadata:
  name: nodejs-tester-secrets
  namespace: nodejs-tester
type: Opaque
stringData:
  # Backend Sentry DSN (@sentry/node)
  SENTRY_DSN: "https://your-backend-key@your-org.sentry.io/project-id"

  # Frontend Sentry DSN (@sentry/react) - Vite uses VITE_ prefix
  VITE_SENTRY_DSN: "https://your-frontend-key@your-org.sentry.io/project-id"
